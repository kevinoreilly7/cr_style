<h1>New Requirement</h1>


<%= form_tag(requirements_url, method: 'post') do %>


  <div>
    <%= label_tag :sf %><br />
    <%= number_field_tag :sf %>
  </div>

    <div>
    <%= label_tag :location %><br />
    <%= text_field_tag :location %>
  </div>

    <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price %>
  </div>

  
  <div>
    <%= submit_tag "Create Requirement" %>
  </div>
<% end %>
