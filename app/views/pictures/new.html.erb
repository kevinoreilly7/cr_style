<h1>New Picture</h1>


<%= form_tag(pictures_url, method: 'post') do %>


  <div>
    <%= label_tag :caption %><br />
    <%= text_area_tag :caption %>
  </div>

    <div>
    <%= label_tag :add_pic %><br />
    <%= check_box_tag :add_pic? %>
  </div>

    <div>
    <%= label_tag :source %><br />
    <%= text_field_tag :source %>
  </div>

  
  <div>
    <%= submit_tag "Create Picture" %>
  </div>
<% end %>
